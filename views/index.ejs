<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Waiting Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container center-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="card border-portal-1 bg-portal-2">
                        <div class="card-body">
                            <div class="text-center">
                                <p>Total Transaksi</p>
                                <h3 id="amount">Rp <%= data.amount.toLocaleString() %></h3>
                                <p class="text-secondary font-weight-bold mb-2">Order ID: <span class="text-dark">#<%= data.order_id %></span></p>
                                <p  class="text-secondary font-weight-bold mb-2">Ref : #<span class="text-dark"><%= data.reference %></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <img src="<%= data.qr_url %>" alt="QR Code" class="img-fluid border-portal-1">
                    </div>
                    <div id="countdown" class="text-center badge-portal-1 mt-3">
                        <p class="">Time Remaining: <span id="time" class="text-portal-4 fw-bold">00:00</span></p>
                    </div>
                    <%- include('partials/footer') %>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="overlay">
    <h5>Your payment is successful.<br>Please wait for the page to redirect.<br><img src="/images/loader.gif" alt="loader" class="img-fluid"></h5>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

<script>
    const expiredTime = new Date('<%= data.expired_time %>').getTime();
    const countdown = document.getElementById('time');

    setInterval(function () {
        const now = new Date().getTime();
        const distance = expiredTime - now;
        if (distance < 0) {
            countdown.innerText = '00:00';
            return;
        }
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        countdown.innerText = `${hours}:${minutes}:${seconds}`;
        if (distance < 0) {
            countdown.innerText = '00:00';
        }
    }, 1000);

    function realTimeStatus(url) {
        return fetch(url)
            .then(response => response.json())
            .then(data => {
                return data.data;
            });
    }

    setInterval(async function () {
        try {
            const data = await realTimeStatus('<%= data.real_time_status %>');
            if(data.status){
                document.getElementById('overlay').style.display = 'block';
                setTimeout(function () {
                    window.location = '<%= data.redirect_url %>'
                }, 2000);
            }
        } catch (error) {
            console.error('Error fetching real-time status:', error);
        }
    }, 1000);

</script>

</body>
</html>
