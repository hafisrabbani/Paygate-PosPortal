<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Waiting Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container center-container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="/images/success.png" alt="QR Code" class="img-fluid" style="width: 200px;">
                    </div>
                    <div class="card border-portal-1 bg-portal-2">
                        <div class="card-body">
                            <div class="text-center">
                                <h3 class="text-portal-1 fw-bold">Transaction Success</h3>
                                <p class="font-weight-bold mb-2">Order ID: <span class="text-dark">#<%= order_id %></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <p  class="font-weight-bold">
                            Thanks for your order
                        </p>
                    </div>
                    <%- include('partials/footer') %>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
<script>
    function sendEventFlutterPayment(order_id, status) {
        const eventsData = {
            order_id: order_id,
            status: status
        };

        PaymentStatus.post(JSON.stringify(eventsData));
    }

    window.onload = function() {
        sendEventFlutterPayment('<%= order_id %>', 'failed');
    }
</script>
</body>
</html>